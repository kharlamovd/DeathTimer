<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ButtonActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_button_layout_height"
        android:layout_marginTop="@dimen/nav_button_margin_top"
        style="@style/nav_buttons_layout_style"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_gravity="end"
            style="@style/nav_buttons_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/nav_button_margin_start"
            app:srcCompat="@drawable/ico_settings" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/learn_date_margin_top"
        android:text="@string/ask_learn_date"
        android:textAlignment="center"
        android:textSize="@dimen/learn_date_text_size" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/go_button_margin_top"
        style="@style/button_style"
        android:onClick="onClick"
        android:text="@string/go" />


</LinearLayout>